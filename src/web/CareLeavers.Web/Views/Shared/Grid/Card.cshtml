@model CareLeavers.Web.Models.Content.Card

@{
    var link = Model.Link?.Slug ?? string.Empty;
}

<div class="hf-card">
    <a href="@link">
        <div class="hf-card-container">
            <contentful-image asset="Model.Image" class="full-width-image card-image" title="@Model.Title"/>
            <div class="cat-card-details">
                <h3 class="govuk-heading-m">@Model.Title</h3>
                <p class="govuk-body">@Model.Text</p>
            </div>
        </div>
    </a>
</div>