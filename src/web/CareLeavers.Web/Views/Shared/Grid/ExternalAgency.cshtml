@model CareLeavers.Web.Models.Content.ExternalAgency

<div class="dfe-box box-ext">
    <div class="box-icon">
        @if (Model.Logo != null)
        {
            <contentful-image asset="@Model.Logo"></contentful-image>
        }
    </div>
    <div class="box-content">
        <h3 class="govuk-heading-s">
            <a href="@Model.Url" target="_blank" class="govuk-link">@Model.Name</a>
            <span class="govuk-body-s">(Opens in a new tab)</span>
        </h3>
        <p class="govuk-body-s">@Model.Description</p>
        <p class="govuk-body-s">
            <strong>Phone:</strong> <a href="tel:@Model.Call" class="govuk-link">@Model.Call</a><br>
            <strong>Opening times:</strong> @Model.OpeningTimes<br>
            <strong>Free:</strong> @(Model.Free ? "Yes" : "No")<br>
            <strong>Accessibility:</strong> @Model.Accessibility
        </p>
    </div>
</div>