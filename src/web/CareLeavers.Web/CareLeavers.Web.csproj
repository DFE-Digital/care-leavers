<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <UserSecretsId>0114b85f-8d5b-4be2-978b-3a3aea947e73</UserSecretsId>
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    </PropertyGroup>

    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="contentful.aspnetcore" Version="8.3.0" />
      <PackageReference Include="GovUk.Frontend.AspNetCore" Version="2.8.0" />
    </ItemGroup>

    <ItemGroup>
      <_ContentIncludedByDefault Remove="wwwroot\assets\dfe-logo-alt.png" />
      <_ContentIncludedByDefault Remove="wwwroot\assets\dfe-logo.png" />
      <_ContentIncludedByDefault Remove="wwwroot\css\application.css" />
      <_ContentIncludedByDefault Remove="wwwroot\css\dfefrontend-2.0.0.min.css" />
      <_ContentIncludedByDefault Remove="wwwroot\css\dfefrontend.css" />
      <_ContentIncludedByDefault Remove="wwwroot\css\metadata.css" />
      <_ContentIncludedByDefault Remove="wwwroot\js\dfefrontend-2.0.0.min.js" />
      <_ContentIncludedByDefault Remove="wwwroot\js\dfefrontend.js" />
      <_ContentIncludedByDefault Remove="wwwroot\js\dfefrontend.min.js" />
    </ItemGroup>

</Project>
